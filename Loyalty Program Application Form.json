    "js": "// show/hide Email and MobileNumber fields and make them mandatory\r\nfunction notificationMethod() {\r\n    var notifyBy = fd.field('PromoInformation').value;\r\n    \r\n    // hide fields\r\n    fd.field('Email').hidden = true;\r\n    fd.field('MobileNumber').hidden = true;\r\n    \r\n    // make fields optional\r\n    fd.field('Email').required = false;\r\n    fd.field('MobileNumber').required = false;\r\n    \r\n    if (notifyBy.includes('by e-mail')) {\r\n        //show Email field and make it required\r\n        fd.field('Email').hidden = false;\r\n        fd.field('Email').required = true;\r\n    }\r\n    \r\n    if (notifyBy.includes('by SMS')) {\r\n        //show MobileNumber field and make it required\r\n        fd.field('MobileNumber').hidden = false;\r\n        fd.field('MobileNumber').required = true;\r\n    }\r\n}\r\n\r\nfd.rendered(function () {\r\n    \r\n    // —Åall the function on form load\r\n    notificationMethod();\r\n    \r\n    // call the function when PromoInformation is changed\r\n    fd.field('PromoInformation').$on('change', notificationMethod)\r\n});\r\n\r\n",
