  "js": "// Validate the list of tenants\r\nfunction toggleOccupants() {\r\n    var occupantsNumber = fd.field('NumberOfTenants').value;\r\n\r\n    fd.validators.length = [];\r\n\r\n    if (occupantsNumber > 0) {\r\n        $('.fd-occupants-list').show();\r\n\r\n        fd.validators.push({\r\n            name: 'OccupantsValidation',\r\n            error: 'List all occupants',\r\n            validate: function (value) {\r\n                if (fd.control('Occupants').value.length < occupantsNumber) {\r\n                    return false;\r\n                }\r\n\r\n                return true;\r\n            },\r\n        });\r\n    } else {\r\n        $('.fd-occupants-list').hide();\r\n    }\r\n}\r\n\r\n// Show/hide PetInformation field and make it mandatory\r\nfunction togglePetInfo() {\r\n    var petInfo = fd.field('PetInformation');\r\n\r\n    if (fd.field('Pets').value) {\r\n        petInfo.hidden = false;\r\n        petInfo.required = true;\r\n    } else {\r\n        petInfo.hidden = true;\r\n        petInfo.required = false;\r\n    }\r\n}\r\n\r\nfd.rendered(function () {\r\n    //show only future dates\r\n    var today = new Date();\r\n    var minDate = today.setDate(today.getDate() + 2);\r\n    fd.field('MoveInDate').widgetOptions = {\r\n        min: new Date(minDate),\r\n    };\r\n\r\n    toggleOccupants();\r\n    fd.field('NumberOfTenants').$on('change', toggleOccupants);\r\n\r\n    togglePetInfo();\r\n    fd.field('Pets').$on('change', togglePetInfo);\r\n});\r\n",
  "css": ".fd-form h1 {\n    font-size: min(6.5vw, 2.34375rem) !important;\n    text-align:center !important;\n    color: #ffff !important;\n}\n\n.fd-form h4 {\n    font-size: min(4.5vw, 1.40625rem) !important;\n    padding-top: 4px !important;\n    padding-bottom: 4px !important;\n    display: flex !important;\n    flex-direction: row !important;\n}\n\n.fd-form h4:before, .fd-form h4:after{\n    content: '';\n    flex: 1 1;\n    border-bottom: 1px solid;\n    margin: auto;\n}\n\n.fd-form h4:before {\n    margin-right: 10px\n}\n\n.fd-form h4:after {\n    margin-left: 10px\n}\n\n.fd-occupants-list {\n    display: none;\n}\n\n",
