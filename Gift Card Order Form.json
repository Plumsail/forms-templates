    "js": "// amount to be paid\r\nvar giftAmount = 0.0;\r\n\r\n//function to highlight button with selected amount\r\nfunction highlightSelectedAmount() {\r\n    var buttons = document.getElementsByClassName('fd-gift-amount-button');\r\n    var amount = fd.field('Amount').value;\r\n\r\n    Object.values(buttons).forEach(function (button) {\r\n        var value = parseFloat(button.innerText.replace(/\\$|,/g, ''));\r\n        if (amount === value) {\r\n            button.classList.remove('btn-light');\r\n            button.classList.add('btn-primary');\r\n            button.classList.add('active');\r\n        } else {\r\n            button.classList.remove('btn-primary');\r\n            button.classList.remove('active');\r\n            button.classList.add('btn-light');\r\n        }\r\n    });\r\n}\r\n\r\nfd.rendered(function () {\r\n    //hide payment section on form load\r\n    $('.fd-payment-form').hide();\r\n    \r\n    // hide the Amount field\r\n    fd.field('Amount').hidden = true;\r\n    \r\n    highlightSelectedAmount();\r\n\r\n    fd.field('Amount').$on('change', function (value) {\r\n        highlightSelectedAmount();\r\n    });\r\n});\r\n\r\nfd.beforeSave(function (data) {\r\n    giftAmount = fd.field('Amount').value;\r\n});\r\n\r\nfd.saved(function () {\r\n    $('.fd-gift-form').hide();\r\n    $('.fd-payment-form').show();\r\n\r\n    if (typeof paypal !== 'undefined') return;\r\n\r\n    function initPayPalButtons() {\r\n        paypal\r\n            .Buttons({\r\n                style: {\r\n                    shape: 'rect',\r\n                    color: 'gold',\r\n                    layout: 'vertical',\r\n                    label: 'paypal',\r\n                },\r\n\r\n                createOrder: function (data, actions) {\r\n                    return actions.order.create({\r\n                        purchase_units: [\r\n                            {\r\n                                description: 'Donation',\r\n                                amount: {\r\n                                    currency_code: 'USD',\r\n                                    value: parseFloat(giftAmount).toFixed(2),\r\n                                },\r\n                            },\r\n                        ],\r\n                    });\r\n                },\r\n\r\n                onApprove: function (data, actions) {\r\n                    return actions.order.capture().then(function (orderData) {\r\n                        // Full available details\r\n                        console.log('Capture result', orderData, JSON.stringify(orderData, null, 2));\r\n\r\n                        // Show a success message within this page, e.g.\r\n                        const element = document.getElementById('paypal-button-container');\r\n                        element.innerHTML = '';\r\n                        element.innerHTML = '<h3>Thank you for your payment!</h3>';\r\n\r\n                        // Or go to another URL:  actions.redirect('thank_you.html');\r\n                    });\r\n                },\r\n\r\n                onError: function (err) {\r\n                    console.log(err);\r\n                },\r\n            })\r\n            .render('#paypal-button-container');\r\n    }\r\n\r\n    var script = document.createElement('script');\r\n    script.type = 'text/javascript';\r\n    script.src = 'https://www.paypal.com/sdk/js?client-id=AQ7P3z6oe-fhuUWaRXJnAKAA9x3KJRIY1tNRRooLpBcHK0cj1jJ3N32mse4fLzdKNOrI-cqW0iidCFzo';\r\n    script.setAttribute('data-sdk-integration-source', 'button-factory');\r\n    script.onload = initPayPalButtons;\r\n\r\n    const head = document.getElementsByTagName('head')[0];\r\n    head.appendChild(script);\r\n});\r\n",
    "css": "/* setting the Heading background depending on the theme */\n.fd-form h1 > span {\n    background-color: var(--fd-primary-rgb) !important;\n}\n\n/* changing styling of the amount buttons when selected */ \n.fd-form .btn-primary.fd-gift-amount-button.active {\n    background-color: var(--fd-primary) !important;\n    border-color: var(--fd-primary) !important;\n}\n\n.fd-form .btn-primary.fd-gift-amount-button:focus {\n    box-shadow: none !important;\n}",
