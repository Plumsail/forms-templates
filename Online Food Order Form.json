    "js": "// set the price for the dish\r\nvar menu = {\r\n    'Garlic Parmesan Fries': 6.99,\r\n    'Mozzarella Sticks': 8.49,\r\n    'Chicken Wings (6 pcs)': 9.99,\r\n    'Bruschetta': 7.29,\r\n    'Caesar Salad': 10.99,\r\n    'Greek Salad': 11.49,\r\n    'Cobb Salad': 12.99,\r\n    'Caprese Salad': 9.99,\r\n    'Spaghetti Bolognese': 13.99,\r\n    'Grilled Salmon': 17.49,\r\n    'Chicken Alfredo Pasta': 15.99,\r\n    'Steak (8 oz)': 19.99,\r\n    'Margherita Pizza': 12.99,\r\n    'Pepperoni Pizza': 14.49,\r\n    'Vegetarian Pizza': 13.99,\r\n    'BBQ Chicken Pizza': 15.99,\r\n    'Classic Cheeseburger': 11.99,\r\n    'Veggie Burger': 10.99,\r\n    'Bacon Avocado Burger': 13.49,\r\n    'Mushroom Swiss Burger': 12.99,\r\n    'Chocolate Lava Cake': 8.99,\r\n    'New York Cheesecake': 7.99,\r\n    'Fruit Tart': 9.49,\r\n    'Tiramisu': 8.49\r\n};\r\n\r\n//function to show/hide details for delivery\r\nfunction showHideDelivery() {\r\n    if (fd.field('Delivery').value == 'Delivery') {\r\n        fd.field('Address').hidden = false;\r\n        fd.field('Building').hidden = false;\r\n        fd.field('Apartment').hidden = false;\r\n        fd.field('Instructions').hidden = false;\r\n    } else {\r\n        fd.field('Address').hidden = true;\r\n        fd.field('Building').hidden = true;\r\n        fd.field('Apartment').hidden = true;\r\n        fd.field('Instructions').hidden = true;\r\n    }\r\n}\r\n\r\nfd.rendered(function() {\r\n\r\n    //disable Total field\r\n    fd.field('Total').disabled = true;\r\n\r\n    //call function when field value changes\r\n    fd.field('Delivery').$on('change', showHideDelivery);\r\n    //call function on form load\r\n    showHideDelivery()\r\n\r\n\r\n        let dt = fd.control('Order')\r\n\r\n\r\n        // make Price column read-only\r\n        const unitPriceColumn = dt.columns.find(c => c.field === 'Price');\r\n        unitPriceColumn.editable = () => false;\r\n\r\n        // make Total column read-only\r\n        const lineTotalColumn = dt.columns.find(c => c.field === 'Total');\r\n        lineTotalColumn.editable = () => false;\r\n\r\n        dt.$on('change', function(value) {\r\n            //variable to count total\r\n            var orderTotal = 0.0;\r\n\r\n            if (value) {\r\n                //go through each row one by one\r\n                for (var i = 0; i < value.length; i++) {\r\n\r\n                    if (value[i].Item && !value[i].Quantity) {\r\n                        value[i].set('Quantity', 1);\r\n                    }\r\n\r\n                    // populate Price column\r\n                    value[i].set('Price', menu[value[i].Item] || 0);\r\n\r\n                    // calculate total for the row\r\n                    value[i].set('Total', value[i].Quantity * value[i].Price || 0);\r\n\r\n                    //calculate total for the table\r\n                    if (value[i].Total) {\r\n                        orderTotal += parseFloat(value[i].Total);\r\n                    }\r\n                }\r\n            }\r\n            //set the  total \r\n            fd.field('Total').value = orderTotal;\r\n        });\r\n\r\n});",
